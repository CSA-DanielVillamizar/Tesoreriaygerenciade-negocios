    <MudNavLink Href="/tesoreria/recibos/rapido" Icon="@Icons.Material.Filled.Bolt" Class="modern-sidebar-item">Recibos Rápidos</MudNavLink>
    <MudNavLink Href="/tesoreria/egresos" Icon="@Icons.Material.Filled.ShoppingCart" Class="modern-sidebar-item">Egresos</MudNavLink>
    <MudNavLink Href="/tesoreria/deudores" Icon="@Icons.Material.Filled.Check" Class="modern-sidebar-item">Deudores</MudNavLink>
    <MudNavLink Href="/tesoreria/donaciones" Icon="@Icons.Material.Filled.MonetizationOn" Class="modern-sidebar-item">Certificados Donación</MudNavLink>
    <MudNavLink Href="/tesoreria/reportes" Icon="@Icons.Material.Filled.BarChart" Class="modern-sidebar-item">Reportes</MudNavLink>
    <MudNavLink Href="/tesoreria/reportes/donaciones-certificados" Icon="@Icons.Material.Filled.CompareArrows" Class="modern-sidebar-item">Donaciones vs Certificados</MudNavLink>
    <MudNavLink Href="/tesoreria/verificacion" Icon="@Icons.Material.Filled.VerifiedUser" Class="modern-sidebar-item">Verificación</MudNavLink>
    <MudNavLink Href="/tesoreria/cierre" Icon="@Icons.Material.Filled.Lock" Class="modern-sidebar-item">Cierre Contable</MudNavLink>
    <MudNavLink Href="/tesoreria/respaldo" Icon="@Icons.Material.Filled.Backup" Class="modern-sidebar-item">Respaldo y Exportaciones</MudNavLink>
    <MudNavLink Href="/tesoreria/presupuestos" Icon="@Icons.Material.Filled.Calculate" Class="modern-sidebar-item">Presupuestos</MudNavLink>
    <MudNavLink Href="/tesoreria/conciliaciones-bancarias" Icon="@Icons.Material.Filled.AccountBalance" Class="modern-sidebar-item">Conciliación Bancaria</MudNavLink>
    
    <!-- Gerencia de Negocios -->
    <MudText Typo="Typo.caption" Class="px-4 mb-2 mt-4" Color="Color.Secondary" Style="font-weight: 600;">GERENCIA DE NEGOCIOS</MudText>
    <MudNavLink Href="/gerencia-negocios/productos" Icon="@Icons.Material.Filled.Inventory" Class="modern-sidebar-item">Productos</MudNavLink>
    <MudNavLink Href="/gerencia-negocios/ventas" Icon="@Icons.Material.Filled.ShoppingCart" Class="modern-sidebar-item">Ventas</MudNavLink>
