    <MudNavLink Href="/gerencia-negocios/clientes" Icon="@Icons.Material.Filled.PersonOutline" Class="modern-sidebar-item">Clientes</MudNavLink>
    <MudNavLink Href="/gerencia-negocios/cotizaciones" Icon="@Icons.Material.Filled.Description" Class="modern-sidebar-item">Cotizaciones</MudNavLink>
