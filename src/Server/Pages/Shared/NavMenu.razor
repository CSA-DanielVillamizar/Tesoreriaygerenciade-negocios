@*
    Navegación principal - Diseñado para funcionar dentro de MudDrawer
    Usa MudNavMenu y MudNavLink para integración nativa con MudBlazor
    Estilo moderno con modern-sidebar-item aplicado
*@

<style>
    /* ESTILOS INLINE PARA GARANTIZAR APLICACIÓN */
    .mud-nav-link .mud-icon-root,
    .mud-nav-link svg {
        font-size: 28px !important;
        width: 28px !important;
        height: 28px !important;
    }
    
    .mud-nav-link {
        font-size: 16px !important;
        padding: 14px 18px !important;
        gap: 14px !important;
    }
</style>

<div class="modern-sidebar">
<MudNavMenu>
    <!-- Principal -->
    <MudText Typo="Typo.caption" Class="px-4 mb-2 mt-2" Color="Color.Secondary" Style="font-weight: 600;">PRINCIPAL</MudText>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" Class="modern-sidebar-item">Dashboard</MudNavLink>
    <MudNavLink Href="/miembros" Icon="@Icons.Material.Filled.People" Class="modern-sidebar-item">Miembros</MudNavLink>
    
    <!-- Tesorería -->
    <MudText Typo="Typo.caption" Class="px-4 mb-2 mt-4" Color="Color.Secondary" Style="font-weight: 600;">TESORERÍA</MudText>
    <MudNavLink Href="/tesoreria/cuentas-financieras" Icon="@Icons.Material.Filled.AccountBalance" Class="modern-sidebar-item">Cuentas Financieras</MudNavLink>
    <MudNavLink Href="/tesoreria/movimientos" Icon="@Icons.Material.Filled.SwapHoriz" Class="modern-sidebar-item">Movimientos Tesorería</MudNavLink>
    <MudNavLink Href="/tesoreria/aportes" Icon="@Icons.Material.Filled.Payment" Class="modern-sidebar-item">Aportes Mensuales</MudNavLink>
    <MudNavLink Href="/tesoreria/recibos" Icon="@Icons.Material.Filled.Receipt" Class="modern-sidebar-item">Recibos</MudNavLink>
