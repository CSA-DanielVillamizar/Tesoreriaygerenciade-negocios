    <MudNavLink Href="/config/usuarios" Icon="@Icons.Material.Filled.ManageAccounts" Class="modern-sidebar-item">Usuarios</MudNavLink>
    
    <!-- Administración -->
    <MudText Typo="Typo.caption" Class="px-4 mb-2 mt-4" Color="Color.Secondary" Style="font-weight: 600;">ADMINISTRACIÓN</MudText>
    <MudNavLink Href="/admin/import-tesoreria" Icon="@Icons.Material.Filled.Upload" Class="modern-sidebar-item">Importar Tesorería</MudNavLink>
    <MudNavLink Href="/admin/auditoria" Icon="@Icons.Material.Filled.History" Class="modern-sidebar-item">Auditoría del Sistema</MudNavLink>
    <MudNavLink Href="/admin/backups" Icon="@Icons.Material.Filled.CloudUpload" Class="modern-sidebar-item">Gestión de Backups</MudNavLink>
</MudNavMenu>
</div>

@code {
    // MudNavMenu y MudNavLink manejan automáticamente el estado activo
    // No requiere lógica adicional
}
