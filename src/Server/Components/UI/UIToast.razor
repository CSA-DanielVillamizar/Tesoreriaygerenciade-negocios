<div class="fixed top-6 right-6 z-50 flex flex-col gap-3">
    @foreach (var toast in Toasts)
    {
        <div class="rounded-xl shadow-lg px-5 py-3 text-white font-semibold flex items-center gap-3 @GetVariant(toast.Variant)">
            <span>@toast.Message</span>
            <button class="ml-auto text-white/70 hover:text-white" @onclick="() => Dismiss(toast.Id)">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M6 18L18 6M6 6l12 12"/></svg>
            </button>
        </div>
    }
</div>
@code {
    [Parameter] public List<ToastModel> Toasts { get; set; } = new();
    [Parameter] public EventCallback<Guid> OnDismiss { get; set; }
    private string GetVariant(string v) => v switch
    {
        "success" => "bg-success",
        "warning" => "bg-warning",
        "danger" => "bg-danger",
        "info" => "bg-primary",
        _ => "bg-slate-800"
    };
    private void Dismiss(Guid id) => OnDismiss.InvokeAsync(id);
    public class ToastModel { public Guid Id { get; set; } public string Message { get; set; } = string.Empty; public string Variant { get; set; } = "info"; }
}
