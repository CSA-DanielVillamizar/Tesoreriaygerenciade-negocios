@inject IJSRuntime JS
@*
    Componente para alternar entre modo claro y oscuro
    Sincroniza el estado con localStorage y MainLayout
*@

<button @onclick="ToggleTheme" 
        class="p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-800 transition" 
        title="@(_isDark ? "Modo claro" : "Modo oscuro")"
        aria-label="@(_isDark ? "Cambiar a modo claro" : "Cambiar a modo oscuro")">
    @if (_isDark)
    {
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
    }
    else
    {
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
    }
</button>

@code {
    private bool _isDark = false;

    [CascadingParameter]
    public MainLayout? Layout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Cargar preferencia de localStorage
        try
        {
            var darkModePreference = await JS.InvokeAsync<string>("localStorage.getItem", "darkMode");
            _isDark = darkModePreference == "true";
            
            if (Layout != null)
            {
                await Layout.SetDarkMode(_isDark);
            }
        }
        catch
        {
            // Si falla, usar modo claro por defecto
            _isDark = false;
        }
    }

    private async Task ToggleTheme()
    {
        _isDark = !_isDark;
        
        // Guardar en localStorage
        await JS.InvokeVoidAsync("localStorage.setItem", "darkMode", _isDark.ToString().ToLower());
        
        // Notificar al layout
        if (Layout != null)
        {
            await Layout.SetDarkMode(_isDark);
        }
        
        // Aplicar clase dark al HTML para Tailwind
        await JS.InvokeVoidAsync("eval", _isDark 
            ? "document.documentElement.classList.add('dark')" 
            : "document.documentElement.classList.remove('dark')");
    }
}
